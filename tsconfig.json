{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "build/src/scripts",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // more strict tests for the typescript code
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "types": [
      "@webgpu/types",
      "vite-plugin-glsl/ext"
    ],
    "lib": [
      "ES2023",
      "DOM"
    ]
  },
  "include": [
    "src/scripts/**/*"
  ],
  "exclude": ["node_modules"]
}